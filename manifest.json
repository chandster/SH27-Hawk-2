{
  "manifest_version": 3,
  "name": "Hawk - Page Indexer 2",
  "description": "Extension combining to-do list, markdown notebook, and indexer into one.",
  "version": "1.0.1",
  "omnibox": { "keyword": "@i\t" },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "storage",
    "unlimitedStorage",
		"notifications",
		"alarms",
    "sidePanel",
    "contextMenus",
    "commands"
  ],

  "side_panel": {
    "default_path": "src/components/hello.html"
  },
  
  "action": {
    "default_popup": "src/components/hello.html",
    "default_icon": "assets/images/logo128x128.png"
  },
  "background": {
    "service_worker": "config/dist/bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/hello.html",
        "*://*/todo_list.html"
      ],
      "js": [
        "src/popup/popup.js",
        "src/features/todo_make.js"
      ]
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "assets/js/jquery-3.7.1.min.js",
        "src/content/send_content.js",
        "src/popup/hellonotes.js"
      ]
    }
  ],
	"icons": {
    "16": "assets/images/logo16x16.png",
    "32": "assets/images/logo32x32.png",
    "48": "assets/images/logo48x48.png",
    "128": "assets/images/logo128x128.png"
  }
}
