{
  "manifest_version": 3,
  "name": "Hawk - Page Indexer",
  "description": "Extension combining to-do list, markdown notebook, and indexer into one.",
  "version": "1.0.1",
  "omnibox": { "keyword": "@i\t" },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage",
    "notifications",
    "alarms",
    "tabs"
  ],
  "action": {
    "default_popup": "src/components/hello.html",
    "default_icon": "assets/images/logo128x128.png"
  },
  "background": {
    "service_worker": "config/dist/bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/hello.html", "*://*/todo_list.html"],
      "js": ["src/popup/popup.js", "src/features/todo_make.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["assets/js/jquery-3.7.1.min.js", "src/content/send_content.js"]
    }
  ],
  "icons": {
    "16": "assets/images/logo16x16.png",
    "32": "assets/images/logo32x32.png",
    "48": "assets/images/logo48x48.png",
    "128": "assets/images/logo128x128.png"
  }
}
